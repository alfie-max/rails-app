<%= "Name : " + @user.name %> <br />
<%= "Email Id : " + @user.email %> <br />
<%= image_tag(@user.avatar.url, class: "d-profile-picture") %>

<% if current_user != @user %>
    <% if @user.followed_by? current_user %>
      <%= link_to "Unfollow", unfollow_user_path, :class => 'btn btn-default' %>
    <% else %>
      <%= link_to "Follow", follow_user_path, :class => 'btn btn-default' %>
    <% end %>
<% end %>

<table style="width:420px">
  <thead>
    <tr>
        <th style="text-align:center;">Id</th>
        <th style="text-align:center;">Title</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each_with_index do |article, index| %>
        <tr>
          <td style="text-align:center;"><%= index+1 %></td>
          <td style="text-align:right;"><%= link_to article.title, article %></td>
        </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @articles, renderer: BootstrapPagination::Rails, class: "pull-left" %>
