<%= form_for @article do |f| %>
  <div class="field form-group">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :Body %>
    <%= f.text_area :content, required: true, class: "form-control" , rows: 10 %>
  </div>

  <div class="field form-group">
    <%= f.label :video %>
    <%= f.file_field :video %>
  </div>

  <div class="btn-lg form-group center">
    <%= f.submit "Submit" %>
  </div>
<% end %>
